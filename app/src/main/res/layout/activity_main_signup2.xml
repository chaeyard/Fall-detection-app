<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.co/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_signup2"
    android:orientation="vertical"
    android:background="@drawable/backg"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="개인정보인증"
        android:textColor="#354F4E"
        android:textSize="37dp"
        />
    <EditText
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edittext_name"
        android:layout_marginTop="8dp"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/img"
        android:clipToOutline="true"
        android:fontFamily="@font/dnfbitbitttf"
        android:textColor="#000000"
        android:textSize="17dp"
        android:gravity="center"
        android:hint="이름"
        />
    <EditText
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edittext_callnumber2"
        android:layout_marginTop="8dp"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/img"
        android:clipToOutline="true"
        android:fontFamily="@font/dnfbitbitttf"
        android:textColor="#000000"
        android:textSize="17dp"
        android:gravity="center"
        android:hint="전화번호"
        />
    <Button
        android:id="@+id/send_checknumber"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="인증번호발송"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:backgroundTint="#2fff"
        />
    <EditText
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/checknumber"
        android:layout_marginTop="8dp"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/img"
        android:clipToOutline="true"
        android:fontFamily="@font/dnfbitbitttf"
        android:textColor="#000000"
        android:textSize="17dp"
        android:gravity="center"
        android:hint="인증번호"
        />
    <Button
        android:id="@+id/button_check_checknumber"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="인증번호확인"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:backgroundTint="#2fff"
        />
    <Button
        android:id="@+id/button_continue2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="계속하기"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:backgroundTint="#2fff"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="-------------------     Or     -------------------"
        android:textColor="#ffffff"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/button_back"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:fontFamily="@font/dnfbitbitttf"
        android:text="뒤로가기"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:backgroundTint="#2fff"
        />
</LinearLayout>